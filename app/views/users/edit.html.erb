<% provide :title, t("view.users.edit_user")  %>
<% provide :button_text, t("view.users.save_changes") %>
<h1><%= t "view.users.update_profile" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to Settings.gravatar_link, target: "_blank" do %>
        <%= t "view.users.change" %>
      <% end %>
    </div>
  </div>
</div>
