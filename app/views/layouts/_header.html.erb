<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("view.layouts.header.home"), root_path %></li>
        <li><%= link_to t("view.layouts.header.help"), "#" %></li>
        <% if logged_in? %>
          <li><%= link_to t("view.sessions.users"), users_path %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              <%= t "view.sessions.acount" %> <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t("view.sessions.profile"), current_user %></li>
              <li><%= link_to t("view.sessions.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("view.sessions.logout"), logout_path, data: { "turbo-method": :delete } %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("view.layouts.header.login"), login_path %></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>
